---
export interface Props extends astroHTML.JSX.ButtonHTMLAttributes {}

const { class: className, 'class:list': classList, ...rest } = Astro.props
---

<button
	{...rest}
	class:list={[
		'flex items-center justify-center rounded-lg border border-slate-700 bg-slate-700 px-4 py-2 text-white disabled:bg-slate-400',
		className,
		classList
	]}
>
	<slot />
</button>
