---
export interface Props extends astroHTML.JSX.InputHTMLAttributes {
	label?: string
}
const {
	label,
	class: className,
	'class:list': classList,
	...rest
} = Astro.props
---

<label class='flex flex-col gap-2'>
	{label && <span class='text-base text-slate-700'>{label}</span>}
	<input
		class:list={[
			'rounded-lg border border-slate-300 p-2',
			className,
			classList
		]}
		{...rest}
	/>
</label>
